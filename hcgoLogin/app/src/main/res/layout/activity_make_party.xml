<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MakePartyActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:orientation="vertical"
        tools:context=".MainMenuActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="91dp"
                android:layout_height="46dp"
                android:layout_marginLeft="20dp"
                app:srcCompat="@drawable/logo" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="651dp"
        android:background="@drawable/party_use_background"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <LinearLayout
            android:layout_width="362dp"
            android:layout_height="28dp"
            android:orientation="vertical"
            android:paddingLeft="310dp"
            android:paddingTop="5dp">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/asdasd"
                    android:layout_width="301dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="파티만들기"
                    android:textSize="16sp"
                    android:fontFamily="@font/notosansregular"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"
                    />

                <ImageButton
                    android:id="@+id/imgb_makepartypage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    app:srcCompat="@drawable/x" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_make_partypage_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="20sp"
                android:fontFamily="@font/notosansbold"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >

            <TextView
                android:id="@+id/tv_a23"
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:text="제목 :"
                android:textSize="18sp"
                android:fontFamily="@font/notosansregular"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                />

            <EditText
                android:id="@+id/ed_makepartytitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/party_use_tv"
                android:ems="10"
                android:inputType="textPersonName" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="133dp"
                android:layout_height="wrap_content"
                android:text="최대 인원수 :"
                android:textSize="18sp"
                android:fontFamily="@font/notosansregular"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                />

            <EditText
                android:id="@+id/ed_makepartyMaxp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/party_use_tv"
                android:ems="10"
                android:inputType="textPersonName" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="76dp"
                    android:layout_height="wrap_content"
                    android:text="위치 : "
                    android:textSize="18sp"
                    android:fontFamily="@font/notosansregular"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/ed_makepartyspace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/party_use_tv"
                    android:ems="10"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:orientation="vertical"
                android:paddingLeft="75dp"

                >

                <Button
                    android:id="@+id/btn_maps"
                    android:layout_width="301dp"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:text="지도에서 위치 설정"
                    android:fontFamily="@font/notosansregular"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="142dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="76dp"
                android:layout_height="match_parent"
                android:text="설명 : "
                android:textSize="18sp"
                android:fontFamily="@font/notosansregular"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                />

            <EditText
                android:id="@+id/ed_makepartyEtc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/party_use_tv"
                android:ems="10"
                android:inputType="textPersonName" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="40dp"

            >

            <Button
                android:id="@+id/btn_MakeParty"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_main_menu"
                android:text="파티 만들기"
                android:textColor="@color/white"
                android:fontFamily="@font/notosansbold"
                android:includeFontPadding="false"

                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>