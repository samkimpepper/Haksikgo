<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".JoinA">
    <!-- 클레스 만들고 위에 수정하기 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:orientation="vertical"
        tools:context=".MainMenuActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="91dp"
                android:layout_height="46dp"
                android:layout_marginLeft="20dp"
                app:srcCompat="@drawable/logo" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="651dp"
        android:background="@drawable/party_use_background"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <LinearLayout
            android:layout_width="362dp"
            android:layout_height="28dp"
            android:orientation="vertical"
            android:paddingLeft="310dp"
            android:paddingTop="5dp">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/asdasd"
                    android:layout_width="301dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/imgb_makepartypage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    app:srcCompat="@drawable/x" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_make_partypage_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="안양일번가 파티"
                android:textSize="15sp"
                android:fontFamily="@font/notosansregular"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_in_partypage_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="라면 ㄱㄱ (1/4)"
                    android:textSize="22sp"
                    android:fontFamily="@font/notosansbold"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"
                    />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="13dp"
                    >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/profile_imgtwo"
                        app:civ_border_color="#B1B1B1"
                        app:civ_border_width="1dp" />

                </FrameLayout>


                <TextView
                    android:id="@+id/tv_makepartyLast"
                    android:layout_width="231dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosansregular"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"
                    android:layout_marginLeft="13dp"
                    android:layout_gravity="center_vertical"
                    android:text="김요환 (남)" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#FFFFFF"
                android:orientation="vertical" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="161dp" />

        <TextView
            android:id="@+id/tv_in_partypage_space"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="위치: 학생식당 앞 진대"
            android:fontFamily="@font/notosansregular"
            android:includeFontPadding="false"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_in_partypage_index"
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:text="누구보다 빠르게 밥만 먹고\n도망갑니다 알아서 참여하세요!"
            android:textSize="18sp"
            android:fontFamily="@font/notosansregular"
            android:includeFontPadding="false"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="53dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"

            >

            <Button
                android:id="@+id/btn_gogogo"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_main_menu"
                android:text="참여하기"
                android:textSize="18sp"
                android:fontFamily="@font/notosansbold"
                android:includeFontPadding="false"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    </LinearLayout>